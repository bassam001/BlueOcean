@inherits LayoutComponentBase
@inject TraderApiClient ApiClient

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            <span>Balance: @(balance?.ToString("C") ?? "Loading...")</span>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private double? balance;

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanyBalance();
    }

    private async Task LoadCompanyBalance()
    {
        try
        {
            var companyData = await ApiClient.GetCompanyAsync();
            balance = companyData.Cash;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching company balance: {ex.Message}");
            balance = null;
        }
    }
}
