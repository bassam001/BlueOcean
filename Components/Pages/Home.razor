@page "/"
@rendermode InteractiveServer


<div class="home-container">

    <main class="main-actions">
        <div class="action-card" @onclick="NavigateToGame">
            <img src="images/new-contracts.png" alt="Handel Contracts">
            <h3>Accept New Contracts</h3>
        </div>
        <div class="action-card" @onclick="NavigateToMyBoats">
            <img src="Images/view-boats.png" alt="View Boats">
            <h3>View My Boats</h3>
        </div>
        <div class="action-card" @onclick="NavigateToFuelPrices">
            <img src="images/fuel-prices.png" alt="Check Fuel Prices">
            <h3>Check Fuel Prices</h3>
        </div>
        <div class="action-card" @onclick="NavigateToMarketplace">
            <img src="images/browse-marketplace.png" alt="Browse Marketplace">
            <h3>Browse Marketplace</h3>
        </div>
    </main>
</div>

@code {
    private void NavigateToMyBoats()
    {

        NavigationManager.NavigateTo("/myboat");
    }

    private void NavigateToGame()
    {

        NavigationManager.NavigateTo("/game-operations");
    }

    private void NavigateToFuelPrices()
    {

        NavigationManager.NavigateTo("/fuel-boat");
    }

    private void NavigateToMarketplace()
    {
        NavigationManager.NavigateTo("/marketplace");
    }

    [Inject] NavigationManager NavigationManager { get; set; }
}


<style>
    .home-container {
        background: url('images/maritime-background.png') no-repeat center center fixed;
        background-size: cover;
        color: #fff;
        font-family: Arial, sans-serif;
    }

    .header {
        background-color: rgba(0, 51, 102, 0.8);
        padding: 20px;
        text-align: center;
        position: sticky;
        top: 0;
        z-index: 1000;
    }

        .header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

    .nav-links {
        list-style: none;
        padding: 0;
        display: flex;
        justify-content: center;
        margin: 15px 0 0;
    }

        .nav-links li {
            margin: 0 15px;
        }

        .nav-links a {
            color: #fff;
            text-decoration: none;
            font-size: 1.2rem;
        }

    .main-actions {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        padding: 50px 0;
    }

    .action-card {
        background-color: rgba(0, 51, 102, 0.9);
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        margin: 20px;
        width: 200px;
        transition: transform 0.3s ease;
    }

        .action-card img {
            max-width: 100px;
            margin-bottom: 15px;
        }

        .action-card h3 {
            font-size: 1.5rem;
            margin: 0;
        }

        .action-card:hover {
            transform: scale(1.05);
        }
</style>
